{
  "tasks": {
    "check": "deno check examples/*.tsx src/**/*.ts",
    "test": "deno test",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "coverage": "deno test --coverage=coverage && deno coverage coverage --lcov > coverage.lcov",
    "serve": "deno run --allow-net --allow-read --allow-env server.ts",
    "start": "deno task check && deno task serve",
    "docs": "deno run --allow-net --allow-env --config docs/deno.json docs/server.tsx"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["ES2021", "DOM", "deno.ns"],
    "jsx": "react",
    "jsxFactory": "h"
  }
}
