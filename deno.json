{
  "tasks": {
    "check": "deno check examples/*.tsx src/**/*.ts",
    "serve": "deno run --allow-net --allow-read jsr:@std/http/file-server examples/ --host localhost --port 8080",
    "start": "deno task check && deno task serve"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx"
  }
}
