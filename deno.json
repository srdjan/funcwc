{
  "tasks": {
    "check": "deno check index.ts lib/**/*.ts",
    "test": "deno test",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "coverage": "deno test --coverage=coverage && deno coverage coverage --lcov > coverage.lcov",
    "docs": "deno doc index.ts"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["ES2021", "DOM", "deno.ns"],
    "jsx": "react",
    "jsxFactory": "h"
  },

  "imports": {
    "jsx": "./lib/jsx-runtime.ts"
  }
}
